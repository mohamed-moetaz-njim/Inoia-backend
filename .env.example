# Database
DATABASE_URL="postgresql://user:password@localhost:5432/inoia_db?schema=public"

# JWT Auth
JWT_SECRET="your_jwt_secret_key"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your_refresh_token_secret"
REFRESH_EXPIRES_IN="7d"

# Application
PORT=3000
NODE_ENV="development"

# CORS
FRONTEND_URL="http://localhost:3000"
CORS_ORIGINS="http://localhost:3000,https://inoia.space"

# Rate Limiting
THROTTLER_TTL=60
THROTTLER_LIMIT=100

# Google Gemini AI
GEMINI_API_KEY="your_gemini_api_key_here"

# Email (Resend)
RESEND_API_KEY="re_your_resend_api_key"
FROM_EMAIL="no-reply@inoia.app"
