# Copy this file to .env and replace placeholders with secure values

# Database
DATABASE_URL=postgresql://inoia_user:inoia_password@localhost:5432/inoia_db?schema=public

# JWT
JWT_SECRET=change_this_to_a_strong_random_secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=change_this_to_another_strong_secret
REFRESH_EXPIRES_IN=7d

# Application
PORT=3000
NODE_ENV=development

# CORS
FRONTEND_URL=http://localhost:3000

# Rate Limiting (Throttler)
THROTTLER_TTL=60
THROTTLER_LIMIT=100
